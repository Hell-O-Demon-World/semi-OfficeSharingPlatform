<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.golfzonaca.backoffice.repository.mybatis.AddressMapper">

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        insert into address (location, postalcode)
        values (#{location}, #{postalCode})
    </insert>

    <update id="update">
        update address
        set location=#{updateParam.location},
            postalcode=#{updateParam.postalCode},
    </update>

    <select id="findByAddressId" resultType="Address">
        select *
        from Address
        where address_id = #{Id}
    </select>
</mapper>